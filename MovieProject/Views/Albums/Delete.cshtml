}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <h2>Delete</h2>
</head>
<body>
    <h2>Delete</h2>

    <h3>Are you sure you want to delete this?</h3>
        <hr />
        <dl class="dl-horizontal">
            <dt>Movie Title</dt>
            <dd>@Html.DisplayFor(modelItem => Model.movietitle)</dd>
            <dt>Release Date</dt>
            <dd>@Html.DisplayFor(modelItem => Model.releasedate)</dd>
            <dt>Genre</dt>
            <dd>@Html.DisplayFor(modelItem => Model.genre)</dd>
            <dt>Price</dt>
            <dd>@Html.DisplayFor(modelItem => Model.price)</dd>
            <dt>Image</dt>
            <dd>@Html.DisplayFor(modelItem => Model.img)</dd>
            <dt>Trailer</dt>
            <dd>@Html.DisplayFor(modelItem => Model.video)</dd>
        </dl>
